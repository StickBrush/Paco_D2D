<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/req_switch"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:checked="false"
        android:longClickable="false"
        android:textOff="Firebase"
        android:textOn="MQTT"
        android:theme="@style/Widget.Design.FloatingActionButton"
        android:layout_marginTop="60dp"
        android:text="Firebase/MQTT"/>

    <EditText
        android:id="@+id/req_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Title" />

    <EditText
        android:id="@+id/req_Receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Receiver Token" />

    <EditText
        android:id="@+id/req_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="message" />

    <Spinner
        android:id="@+id/request_type"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/req_message"
        android:layout_marginTop="20dp"
        android:hint="Data Type"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_req_send"
        android:text="Send"
        android:layout_marginTop="20dp"
        android:background="#1E90FF"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nearby_devices_list_view">
    </ListView>

</LinearLayout>